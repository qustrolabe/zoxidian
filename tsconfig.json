{
	"compilerOptions": {
		"inlineSourceMap": true,
		"inlineSources": true,
		"module": "ESNext",
		"target": "ES2017",
		"allowJs": true,
		"strict": true,
		"noImplicitReturns": true,
		"moduleResolution": "bundler",
		"importHelpers": true,
		"isolatedModules": true,
		"types": [
			"bun-types"
		],
		"lib": [
			"DOM",
			"ES2017"
		]
	},
	"include": [
		"src/**/*.ts",
		"tests/**/*.ts"
	]
}